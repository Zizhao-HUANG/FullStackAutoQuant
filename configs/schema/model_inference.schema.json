{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rd-agent.local/schema/model_inference.json",
  "title": "ModelInferenceConfig",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "calendar",
    "output",
    "model"
  ],
  "properties": {
    "calendar": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "start_date",
        "end_date"
      ],
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date"
        },
        "end_date": {
          "type": "string",
          "format": "date"
        },
        "skip_non_trading": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "qlib_data_dir",
        "daily_pv",
        "factors_workspace"
      ],
      "properties": {
        "qlib_data_dir": {
          "type": "string"
        },
        "daily_pv": {
          "type": "string"
        },
        "factors_workspace": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "combined_factors_out": {
          "type": "string"
        },
        "features_out": {
          "type": "string"
        }
      }
    },
    "model": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "weights",
        "dropout_samples"
      ],
      "properties": {
        "weights": {
          "type": "string"
        },
        "device": {
          "type": "string",
          "enum": [
            "cpu",
            "cuda"
          ],
          "default": "cpu"
        },
        "dropout_samples": {
          "type": "integer",
          "minimum": 1,
          "default": 16
        }
      }
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "latest_csv",
        "archive_dir"
      ],
      "properties": {
        "latest_csv": {
          "type": "string"
        },
        "archive_dir": {
          "type": "string"
        },
        "copy_latest_to_archive": {
          "type": "boolean",
          "default": true
        },
        "archive_strategy": {
          "type": "string",
          "enum": [
            "local",
            "s3"
          ],
          "default": "local"
        }
      }
    },
    "logging": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARNING",
            "ERROR"
          ],
          "default": "INFO"
        },
        "file": {
          "type": "string"
        }
      }
    }
  }
}




